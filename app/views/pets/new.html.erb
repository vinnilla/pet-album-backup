<%= form_for(@pet, url: pets_path) do |f| %>

  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% @pet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_box form-horizontal">
    <h1>New Pet</h1>
    <div class="form-group first">
      <%= f.label "Name", class:"col-md-2 lower"%>
      <div class="col-md-10">      
        <%= f.text_field :name, class:"form-control", placeholder: "Name", autofocus: true, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Gender", class:"col-md-2 lower" %>
      <div class="col-md-10">      
        <%= f.text_field :gender, class:"form-control", placeholder: "Gender", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Species", class:"col-md-2 lower"%>
      <div class="col-md-10">      
        <%= f.text_field :species, class:"form-control", placeholder: "Species", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Breed", class:"col-md-2 lower"%>
      <div class="col-md-10">      
        <%= f.text_field :breed, class:"form-control", placeholder: "Breed", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Bio", class:"col-md-2 lower" %>
      <div class="col-md-10">
        <%= f.text_area :bio, class:"form-control", placeholder: "Bio", autocomplete: "off" %>
      </div>
    </div>

    <!-- hidden field to add relationship between pet and current user -->
    <%= f.hidden_field :user_id, :value => current_user.id %>

    <div class="form-group">
      <%= f.submit "Save", class: "button"%>
    </div>
  </div>

<% end %>